# =================================
# Web App Environment Variables
# =================================
# Copy this file to .env and fill in the values

# ---------------------------------
# App URLs
# ---------------------------------
# The URL where the Next.js app is hosted
NEXT_PUBLIC_APP_URL=http://localhost:3001

# The URL of the tRPC server
NEXT_PUBLIC_SERVER_URL=http://localhost:4000

# Vercel URL (auto-populated in Vercel deployments)
NEXT_PUBLIC_VERCEL_URL=

# ---------------------------------
# Authentication (Better Auth)
# ---------------------------------
# Secret key for signing tokens (generate with: openssl rand -base64 32)
BETTER_AUTH_SECRET=

# PostgreSQL connection string for Better Auth
# Format: postgresql://user:password@host:port/database
BETTER_AUTH_DATABASE_URL=

# ---------------------------------
# Database (Supabase)
# ---------------------------------
# Your Supabase project URL
NEXT_PUBLIC_SUPABASE_URL=

# Supabase anonymous (public) key
NEXT_PUBLIC_SUPABASE_ANON_KEY=

# Supabase service role key (keep this secret!)
SUPABASE_SERVICE_ROLE_KEY=

# ---------------------------------
# Email (Resend)
# ---------------------------------
# Resend API key (get from https://resend.com/api-keys)
RESEND_API_KEY=

# Email sender address
# Development: onboarding@resend.dev
# Production: noreply@yourdomain.com (must verify domain in Resend)
RESEND_EMAIL_FROM=onboarding@resend.dev

# ---------------------------------
# Error Monitoring (Sentry) - Optional
# ---------------------------------
# Sentry DSN for client-side error tracking
NEXT_PUBLIC_SENTRY_DSN=

# Sentry DSN for server-side error tracking
SENTRY_DSN=

# ---------------------------------
# Logging
# ---------------------------------
# Log level: trace, debug, info, warn, error, fatal
LOG_LEVEL=debug
