{
	"name": "opskings",
	"private": true,
	"workspaces": [
		"apps/*",
		"packages/*"
	],
	"scripts": {
		"preinstall": "node -e \"if (process.env.npm_execpath && !process.env.npm_execpath.includes('bun')) { console.error('âŒ This project requires Bun. Please use \\\\'bun install\\\\' instead of npm/pnpm/yarn.'); process.exit(1); }\"",
		"prepare": "husky",
		"check": "biome check --write .",
		"dev": "turbo dev",
		"build": "turbo build",
		"check-types": "turbo check-types",
		"test": "turbo test",
		"test:unit": "turbo test:run",
		"test:coverage": "turbo test:coverage",
		"test:e2e": "turbo -F web test:e2e",
		"test:stats": "bun run scripts/update-test-stats.ts",
		"dev:native": "turbo -F native dev",
		"dev:web": "turbo -F web dev",
		"dev:server": "turbo -F server dev",
		"db:push": "turbo -F server db:push",
		"db:studio": "turbo -F server db:studio",
		"db:generate": "turbo -F server db:generate",
		"db:migrate": "turbo -F server db:migrate"
	},
	"dependencies": {},
	"devDependencies": {
		"@biomejs/biome": "^2.2.2",
		"@commitlint/cli": "^20.3.1",
		"@commitlint/config-conventional": "^20.3.1",
		"husky": "^9.1.7",
		"lint-staged": "^16.2.7",
		"supabase": "^2.39.2",
		"turbo": "^2.5.6"
	},
	"engines": {
		"bun": ">=1.0.0"
	},
	"packageManager": "bun@1.2.13"
}
